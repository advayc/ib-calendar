// Prisma schema for calendar persistence

// Use SQLite for quick local setup; can switch to PostgreSQL later
// To migrate: npx prisma migrate dev --name init

// Use SQLite for local development by default. If you want to use PostgreSQL,
// set DATABASE_URL in your environment and update this file accordingly.
// Use DATABASE_URL to connect to your database. For local development you can
// keep using SQLite by setting DATABASE_URL to a sqlite file URL (e.g.
// "file:./dev.db") or by using a separate schema. For production/deployment
// point DATABASE_URL to your Supabase Postgres connection string.
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Club {
  id        String   @id @default(cuid())
  slug      String   @unique
  name      String
  color     String   @default("#007AFF")
  enabled   Boolean  @default(true)
  events    Event[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id          String    @id @default(cuid())
  title       String
  description String?
  location    String?
  date        DateTime  // date portion used (store at midnight or with time if needed)
  time        String?   // simple HH:mm or label like 'All Day'
  clubId      String
  club        Club      @relation(fields: [clubId], references: [id])
  // Recurrence (expanded occurrences stored separately OR reference template)
  recurrenceFrequency String? // e.g. 'WEEKLY'
  recurrenceInterval  Int? // every X weeks
  recurrenceCount     Int? // number of occurrences
  recurrenceUntil     DateTime?
  recurrenceGroupId   String? // Group ID to identify all events in the same recurring series
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model AdminUser {
  id        String   @id @default(cuid())
  username  String   @unique
  passwordHash String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
